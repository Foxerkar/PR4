<Window x:Class="PR4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions >

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="1" x:Name="ListBoxNumbers"/>

        <StackPanel Grid.Column="0">

            <Button Content="Найти" Height="50" Width="150" Margin="20" Click="Button_Click"/>
            <TextBlock Text="Найти все 'Числа самовлюблённые до N' " Height="20" Width="250"/>
            <TextBox x:Name="TextBox" Height="30" Width="100" Margin="20"/>

        </StackPanel>

    </Grid>
</Window>
